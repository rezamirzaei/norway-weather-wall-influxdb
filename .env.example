# ----------------------------
# App (FastAPI)
# ----------------------------
APP_ENV=development
APP_DEBUG=true

# 32+ chars strongly recommended
APP_SECRET_KEY=change_me_to_a_long_random_secret_key_32_chars_min

# Admin login for /auth/token (bcrypt hash)
APP_ADMIN_USERNAME=admin
# Optional: override the admin password hash.
# Default admin password is: change_me
# To set a custom one, generate a bcrypt hash and set it here.
# APP_ADMIN_PASSWORD_HASH=$2b$12$sdOU8uwfeIt/6CaZUIM6ke71zg30wHn0r3QC4TDA3xHYwQxTVEEXi

# CORS (JSON list)
APP_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Trusted hosts (JSON list)
APP_TRUSTED_HOSTS=["localhost","127.0.0.1"]

# ----------------------------
# InfluxDB init (Docker)
# ----------------------------
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=change_me

# InfluxDB (used by both Influx container init and the API)
APP_INFLUX_URL=http://localhost:8086
APP_INFLUX_ORG=demo
APP_INFLUX_BUCKET=metrics
APP_INFLUX_TOKEN=change_me_to_a_long_random_token

# ----------------------------
# Weather (MET Norway)
# ----------------------------
# MET Norway requests a descriptive User-Agent with contact information.
APP_WEATHER_USER_AGENT=influx-db-demo/0.1 (contact: you@example.com)
APP_WEATHER_FETCH_ON_LOGIN=true
# Continuously writes points into InfluxDB to support "live" UI updates.
APP_WEATHER_BACKGROUND_REFRESH_ENABLED=true
# Background loop tick interval (seconds). The UI polls once per second by default.
APP_WEATHER_BACKGROUND_REFRESH_INTERVAL_SECONDS=1
# Prevents refreshing too often (protects the provider + avoids redundant writes).
APP_WEATHER_MIN_REFRESH_INTERVAL_SECONDS=300
